    <gap:splash src="img/res/splash/screen-android-portrait-hd.png"  	gap:platform="android" gap:density="hdpi" />
    <gap:splash src="img/res/splash/screen-android-portrait-hd.png" 	gap:platform="android" gap:density="xhdpi" />
    
    <gap:splash src="www/img/res/splash/Default~iphone.png"    			gap:platform="ios"		width="320" height="480" />
    <gap:splash src="www/img/res/splash/Default@2x~iphone.png" 			gap:platform="ios"     	width="640" height="960" />
