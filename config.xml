    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>
  
  	<feature name="InAppBrowser">
    	<param name="ios-package" value="CDVInAppBrowser" />
	</feature> -->

<icon src="icon.png" />

  <platform name="ios">
	  <!-- iOS 7.0+ -->
	  <!-- iPhone / iPod Touch -->
	  <icon src="img/res/icons/ios/icon-76.png" width="60" height="60" />
	  <icon src="res/icons/ios/icon-60@2x.png" width="120" height="120" />
	
	  <!-- iPad -->
	  <icon src="img/res/icons/ios/icon-76.png" width="76" height="76" />
	  <icon src="res/icons/ios/icon-76@2x.png" width="152" height="152" />
	
	  <!-- iOS 6.1 -->
	  <!-- Spotlight icon -->
	  <icon src="img/res/icons/ios/icon-40.png" width="40" height="40" />
	  <icon src="img/res/icons/ios/icon-40@2x.png" width="80" height="80" />
	
	  <!-- iPhone / iPod Touch -->
	  <icon src="img/res/icons/ios/icon-29@2x.png" width="57" height="57" />
	  <icon src="img/res/icons/ios/icon-60@2x.png" width="114" height="114" />
	
	  <!-- iPad -->
	  <icon src="img/res/icons/ios/icon-76.png" width="72" height="72" />
	  <icon src="img/icons/ios/icon-76@2x.png" width="144" height="144" />
	
	  <!-- iPhone Spotlight and Settings icon -->
	  <icon src="img/res/icons/ios/icon-29.png" width="29" height="29" />
	  <icon src="img/res/icons/ios/icon-29@2x.png" width="58" height="58" />
	
	  <!-- iPad Spotlight and Settings icon -->
	  <icon src="img/res/icons/ios/icon-29@3x.png" width="50" height="50" />
	  <icon src="img/res/icons/ios/icon-60@2x.png" width="100" height="100" />
	</platform>
	
	<gap:splash src="img/res/splash/screen-android-portrait-hd.png"  	gap:platform="android" gap:density="ldpi" />
